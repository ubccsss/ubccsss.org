{
  "name": "ubccsss.org",
  "version": "0.0.1",
  "private": true,
  "description": "Website for the UBC CSSS",
  "repository": "https://github.com/ubccsss/ubccsss.org.git",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "prettier-plugin-go-template": "^0.0.13",
    "pretty-quick": "^3.1.3"
  },
  "scripts": {
    "format": "prettier --write '**/*.+(js|html|css|json|md|yaml|yml)'",
    "dry": "prettier --check '**/*.+(js|html|css|json|md|yaml|yml)'",
    "dev": "hugo server -D",
    "build": "hugo",
    "prepare": "husky install"
  }
}
